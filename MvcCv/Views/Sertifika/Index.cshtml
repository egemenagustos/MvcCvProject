@using MvcCv.Models.Entity
@model List<sertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{ string renk = "";}
@{ string spanrenk = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <br />
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">                      
                        <div class="card-body">                         
                                <div class="tab-pane" id="timeline">
                                    <div class="timeline timeline-inverse">
                                        @foreach(var item in Model)
                                        {
                                            if(item.id %2==0)
                                            {
                                                renk = "btn btn-success";
                                                spanrenk = "btn btn-success";
                                            }
                                            else
                                            {
                                                renk = "btn btn-primary";
                                                spanrenk = "btn btn-primary";
                                            }
                                        <div class="time-label">
                                            <a href="/Sertifika/SertifikaGetir/@item.id" class="@renk">
                                                <span class="@spanrenk">
                                                    @item.tarih
                                                </span>
                                            </a>
                                        </div>
                                        <div>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.aciklama
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                    <a href="/Sertifika/YeniSertifika" class="btn btn-outline-info">Yeni Sertifika Girişi</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</body>
</html>


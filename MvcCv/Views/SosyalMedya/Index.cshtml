@using MvcCv.Models.Entity
@model List<sosyalmedya>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@{ string durum = "";}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <br />
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Sosyal Medya Listem</h3>
                            </div>

                            <div class="card-body">
                                <button class="btn btn-outline-dark" data-toggle="modal" data-target="#modal1">Sosyal Medya Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Sosyal Medya</th>
                                            <th>Durum</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if(item.durum == true)
                                            {
                                                durum = "Aktif";
                                            }
                                            else
                                            {
                                                durum = "Pasif";
                                            }
                                            <tr>
                                                <td>@item.id</td>
                                                <td>@item.ad</td>
                                                <td>@durum</td>
                                                <td><a href="/SosyalMedya/Sil/@item.id" class="btn btn-default">Sil</a></td>
                                                <td><a href="/SosyalMedya/SayfaGetir/@item.id" class="btn btn-default">Düzenle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Sosyal Medya Ekle</h2>
                    </div>
                    <form method="post" action="/SosyalMedya/Ekle">
                        <div class="modal-body">
                            <label>Sosyal Medya İsmi :</label>
                            <input type="text" name="ad" class="form-control" />
                            <br />
                            <label>Sosyal Medya Linki :</label>
                            <input type="text" name="link" class="form-control" />
                            <br />
                            <label>Sosyal Medya İkonu :</label>
                            <input type="text" name="ikon" class="form-control" />
                            <br />
                            <button class="btn btn-outline-secondary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


